@model IEnumerable<MyVeterinaria.Web.Data.Entities.Owner>

@{
    ViewData["Title"] = "Index";
}

<h2>Owners</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                # Mascotas
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.User.Document)
            </td>
            <td>
                @Html.DisplayFor(model => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(model => item.User.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(model => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(model => item.Pets.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
